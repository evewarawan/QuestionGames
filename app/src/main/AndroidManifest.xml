<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rtc.rattanamon.warawan.questiongames">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainHub" android:screenOrientation="portrait" />
        <activity android:name=".MainLevel" android:screenOrientation="portrait" />
        <activity android:name=".PlayGame" android:screenOrientation="portrait" />
        <activity android:name=".Score" android:screenOrientation="portrait" />
        <activity android:name=".ShowScore" android:screenOrientation="portrait"></activity>
    </application>

</manifest>